<p id="notice"><%= notice %></p>

<h1>Rates</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th>USDCLP</th>
      <th>EURCLP</th>
      <th>GBPCLP</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rates.each do |rate| %>
      <tr>
        <td><%= rate.provider %></td>
        <td><%= rate.usdclp %></td>
        <td><%= rate.eurclp %></td>
        <td><%= rate.gbpclp %></td>
        <td><%= rate.created_at.strftime("%d/%m/%Y a las %H:%M:%S") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rate', new_rate_path %>
